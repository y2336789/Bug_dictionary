<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/noticebar"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            >

            <ImageButton
                android:id="@+id/caution_btn3"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:src="@drawable/cautionwhite" />

            <ImageView
                android:id="@+id/warning_btn3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="center"
                android:src="@drawable/forecast" />
        </LinearLayout>

        <Button
            android:id="@+id/w_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="#81A682"
            android:text="병 리스트로 전환"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I. 식량작물"
            android:textSize="18dp">

        </TextView>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/warning_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">
        </androidx.recyclerview.widget.RecyclerView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ⅱ. 채 소"
            android:textSize="18dp"
            android:layout_marginBottom="10dp">

        </TextView>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/warning_recycler_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">
        </androidx.recyclerview.widget.RecyclerView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ⅲ. 과 수"
            android:textSize="18dp"
            android:layout_marginBottom="10dp"></TextView>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/warning_recycler_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">
        </androidx.recyclerview.widget.RecyclerView>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/warning_old"
            android:layout_gravity="center"
            android:backgroundTint="#81A682"
            android:text="예전에 발생했던 병해충 리스트 보기">

        </Button>
    </LinearLayout>


</androidx.core.widget.NestedScrollView>